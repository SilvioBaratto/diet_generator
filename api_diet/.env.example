# Application Configuration
ENVIRONMENT=development
DEBUG=True
PROJECT_NAME=Diet Generator API
VERSION=1.0.0

# Database Configuration (Local Docker - simple credentials)
# Note: Docker container uses port 5433 on host (to avoid conflict with system PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/diet_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_POOL_PRE_PING=True
DATABASE_ECHO=False

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://localhost:4300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=text

# AI/LLM Configuration (BAML)
MY_OPENAI_KEY=your-openai-api-key-here

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=True
METRICS_PATH=/metrics

# Documentation (optional)
SWAGGER_USER=admin
SWAGGER_PASS=admin123
